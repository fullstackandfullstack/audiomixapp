<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title and Menu Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/app_name"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/ic_menu_more"
                    android:contentDescription="@string/playlists"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </RelativeLayout>

            <!-- Selected Playlist Display -->
            <TextView
                android:id="@+id/tvSelectedPlaylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_playlist_selected"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="16dp" />

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnAddTrack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_track"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnAddAnnouncement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/add_announcement"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Playback Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnPlay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/play"
                    android:layout_marginEnd="4dp"
                    android:enabled="false" />

                <Button
                    android:id="@+id/btnPause"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pause"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:enabled="false" />

                <Button
                    android:id="@+id/btnStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/stop"
                    android:layout_marginStart="4dp"
                    android:enabled="false" />
            </LinearLayout>

            <!-- Main Volume Slider -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_volume"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/seekMainVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="80"
                android:layout_marginBottom="16dp"
                android:enabled="false" />

            <!-- Announcement Volume Slider -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/announcement_volume"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/seekAnnouncementVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="75"
                android:layout_marginBottom="16dp"
                android:enabled="false" />

            <!-- Announcement Interval -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/announcement_interval"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/seekAnnouncementInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="300"
                android:progress="30"
                android:layout_marginBottom="8dp"
                android:enabled="false" />

            <TextView
                android:id="@+id/tvIntervalValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30 seconds"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Play at End Only Checkbox -->
            <CheckBox
                android:id="@+id/checkPlayAtEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/play_at_end"
                android:layout_marginBottom="16dp"
                android:enabled="false" />

            <!-- Track List -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loaded Tracks:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_tracks"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:minHeight="60dp"
                android:layout_marginBottom="16dp" />

            <!-- Announcements List -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/announcements"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerAnnouncements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:nestedScrollingEnabled="false" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a playlist to begin"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
